		"eslint-config-prettier": "^10.1.8",
		"eslint-plugin-svelte": "^2.46.1",
		"postcss": "^8.5.6",
		"prettier": "^3.6.2",
		"prettier-plugin-svelte": "^3.4.0",
		"svelte": "^5.43.14",
		"svelte-check": "^4.3.4",
		"tailwindcss": "^4.1.17",
		"tslib": "^2.8.1",
